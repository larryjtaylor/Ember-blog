{{#if updateCommentForm}}
  <h4>Update {{comment.author}}'s blog comment</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=comment.author}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" placeholder=comment.content}}
      </div>

      <button {{action 'updateComment' comment}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateCommentForm'}}>Update comment</button>
{{/if}}
